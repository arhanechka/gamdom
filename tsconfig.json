{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "playwright"],
    "baseUrl": ".",
    "paths": {
      "@config/*": ["ui/utils/config/*"],
      "@utils/*": ["shared/utils/*"],
      "@pages/*": ["ui/pages/*"],
      "@api-client/*": ["api/api-client/*"]
    }
  },
  "include": ["playwright.config.ts", "api/**/**.ts", "ui/**/**.ts"]
}
